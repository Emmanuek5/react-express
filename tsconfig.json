{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    // Some stricter flags
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["index.ts", "test-server/**/*"],
  "exclude": ["node_modules","test-server"]
}
