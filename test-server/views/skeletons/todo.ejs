<ul class="todo-list">
  <% for(let i = 0; i < 3; i++) { %>
    <li class="todo-item" style="
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 8px 0;
      border-bottom: 1px solid #eee;
      animation: pulse 1.5s ease-in-out infinite;
    ">
      <div style="
        width: 16px;
        height: 16px;
        border: 2px solid #ddd;
        border-radius: 3px;
      "></div>
      <div style="
        flex: 1;
        height: 12px;
        background: linear-gradient(90deg, #f0f0f0 25%, #f8f8f8 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        border-radius: 4px;
      "></div>
    </li>
  <% } %>
</ul>

<style>
  @keyframes pulse {
    0% { opacity: 0.6; }
    50% { opacity: 1; }
    100% { opacity: 0.6; }
  }
</style>
